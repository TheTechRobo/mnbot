{% extends "skeleton.j2" %}

{% block title %} {{ adj }} Items {% endblock %}

{% block content %}

<section id="item-list">
	{% if pending.__len__ %}
		<h2>{{ len(pending) }} {{ adj }} Items</h2>
	{% else %}
		<h2>{{ adj }} Items</h2>
	{% endif %}
	<div class="overflow-auto">
		<table>
			<tr>
				<th>Identifier</th>
				<th>URL</th>
				<th>Explanation</th>
				<th>Parent</th>
				<th>Queued by</th>
				<th>Queued at</th>
			</tr>
			{% for item in pending %}
				<tr>
					<td>
						<a href="{{ url_for('single_item', id = item.id) }}">{{ item.id }}</a>
					</td>
					<td>{{ item.item }}</td>
					<td>{{ item.explanation }}</td>
					<td>{{ item.parent_item }}</td>
					<td>{{ item.queued_by }}</td>
					<td>{{ item.queued_at.replace(microsecond=0) }}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
</section>

{% endblock %}
